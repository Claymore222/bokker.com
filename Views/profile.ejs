<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <%- include("partials/menubar.ejs") %>
    <section class="h-100 gradient-custom-2">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-lg-9 col-xl-7">
            <div class="card">
              <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                  <img draggable="false" src="<%= user.imageURL %>" alt="Generic placeholder image"
                    class="img-thumbnail" style="width: 150px; z-index: 1">
                </div>
                <div class="ms-3" style="margin-top: 130px;">
                  <h5>
                    <%= user.first_name %>
                      <%= user.last_name %>
                  </h5>
                  <p>
                    <%= user.email %>
                  </p>
                </div>
              </div>
              <div class="p-4 text-black" style="background-color: #f8f9fa;">
                <div class="d-flex justify-content-end text-center py-1">
                  <div>
                    <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark" style="z-index: 1;"
                      onclick="window.location.href = '/user'">
                      Edit profile
                    </button>
                    <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark" style="z-index: 1"
                      onclick="window.location.href = '/user/favorites' ">Favorities</button>
                    <p class="mb-1 h5">
                      <%= totalCount %>
                    </p>
                    <p class="small text-muted mb-0">Book</p>
                  </div>
                </div>
              </div>
              <div class="card-body p-4 text-black">
                <div class="mb-5">
                  <p class="lead fw-normal mb-1">About <a href="/user/edit/biography/<%= user._id %>"><i class="fa-solid fa-pen"></i></a></p>
                  <div class="p-4" style="background-color: #f8f9fa;">
                    <p class="font-italic mb-1">Web Developer</p>
                    <p class="font-italic mb-1">Lives in New York</p>
                    <p class="font-italic mb-0">Photographer</p>
                  </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <p class="lead fw-normal mb-0">Recent Books</p>
                  <p class="mb-0"><a href="/user/<%= user.email %>/books" class="text-muted">Show all</a></p>
                </div>
                <div class="row g-2">
                  <% const recentBooks=books.slice(0, 4); %>
                    <% for (const book of recentBooks) { %>
                      <div class="col mb-2">
                        <a href="/book/<%= book._id %>"><img src="<%= book.book_image %>" alt="<%= book.title %>"
                            class="w-100 h-100 rounded-3"></a>
                      </div>
                      <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script>

    </script>

</body>

</html>